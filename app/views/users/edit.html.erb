<h1>プロフィール編集</h1>

<%= form_for(@user) do |f| %>

	<def class = "field">
		<%= f.label :ニックネーム %><br />
		<%= f.text_field :name, autofocus: true, autocomplete: "email" %>
	<div class="field">
		<%= f.label :image %>
		<%= f.attachment_field :profile_image %>
	</div>
	</def>
	<div class="field">
		<%= f.label :メールアドレス %><br />
	    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
	</div>
	<div class="field">
		<%= f.label :自己紹介 %><br />
		<%= f.text_area :introduction %>
	</div>
		<%= f.submit "編集を保存する", class: "btn btn-primary" %>
<% end %>

<%= link_to "退会する", user_withdrawal_path %>