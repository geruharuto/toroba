<h1><%= @user.name %>さんのマイページ</h1>
<%= attachment_image_tag(@user, :profile_image, :fill, 50, 50, format: 'jpeg',fallback: "figure_standing.png") %>

<%= @user.introduction %>

<% if current_user == @user %>
	<%= link_to "プロフィール編集", edit_user_path(current_user) %>
<% else %>
	 <% if @user.followed_by?(current_user) %>
      <p><%= link_to 'フォローを外す',user_relationships_path(@user.id), method: :delete %></p>
 	<% else %>
      <p><%= link_to 'フォローする', user_relationships_path(@user.id), method: :post %></p>
    <% end %>
<% end %>

<tbody>
	<% @mytweet.each do |tweet| %>
	<tr>
		<td>
			<%= user.name %>
			<%= attachment_image_tag(tweet.user, :profile_image, :fill, 50, 50, format: 'jpeg',fallback: "figure_standing.png") %>
			<%= link_to user.tweet, tweet_path(tweet.id) %>
			<% end %>
		</td>
	</tr>
</tbody>