<% active = current_user.passive_notifications %>

<% active.each do |ac, index| %>
  <% if ac.checked == false %>
    <div class = "tweet-index-false">
      <div class = "comment-other-than">
        <div class = "float-left">
          <div class="user-view clearfix ">
            <%= link_to user_path(ac) do %>
              <%= attachment_image_tag(User.find(ac.active_id), :profile_image, :fill,100,100, format: "jpeg", fallback: "figure_standing.png", size: "50x50", class:"profile-img-circle") %>
            <% end %>
            <%= notification_form(ac) %><span class="moderate-font"><%= " (#{time_ago_in_words(ac.created_at)} 前)" %></span>
            <br>
            <% if !@comment.nil? %>
              <p class="moderate-font text-center" style="color: #C0C0C0;"><%= @comment %></p>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% else %>
    <div class = "tweet-index-true">
      <div class = "comment-other-than">
        <div class = "float-left">
          <div class="user-view clearfix ">
            <%= link_to user_path(ac) do %>
              <%= attachment_image_tag(User.find(ac.active_id), :profile_image, :fill,100,100, format: "jpeg", fallback: "figure_standing.png", size: "50x50", class:"profile-img-circle") %>
            <% end %>
            <%= notification_form(ac) %><span class="moderate-font"><%= " (#{time_ago_in_words(ac.created_at)} 前)" %></span>
            <br>
            <% if !@comment.nil? %>
              <p class="moderate-font text-center" style="color: #C0C0C0;"><%= @comment %></p>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
