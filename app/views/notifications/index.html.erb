<h3 class="">通知</h3>
    <%= link_to notification_destroy_all_path(@notifications), method: :delete do %>
        <i class="fas fa-trash" style="color: black;"></i>
        <h7>全削除</h7>
    <% end %>
    <hr>

<% if @notifications.exists? %>
    <div class="">
        <% active = notification.active %>
		<% tweet = notification.tweet %>

		<div class="">
	  		<%= link_to users_user_path(notification.tweet) do %>
	    		<%= attachment_image_tag(tweet.user, :profile_image, :fill, 50, 50, format: 'jpeg',fallback: "figure_standing.png") %>
	 		<% end %>
	  		<%= notification_form(notification) %><span class=""><%= " (#{time_ago_in_words(notification.created_at)} 前)" %></span>
		  	<br>
		  <% if !@comment.nil? %>
		    <%= @comment %>
		  <% end %>
		</div>
    </div>
<% else %>
    <p>通知はありません</p>
<% end %>