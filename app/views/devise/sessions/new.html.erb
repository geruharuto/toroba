<h2>ログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

　<%= link_to "=>パスワードを忘れた方はこちら", new_user_password_path %><br>

  <div class="actions">
    <%= f.submit "ログイン" %>
  </div>
<% end %>
<h2>登録がお済でない方</h2>

  <%= link_to "こちら", new_user_registration_path %>
  <span> から新規登録を行ってください。</span>
