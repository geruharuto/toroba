<div class="container-fluid">
	<div class="comment_area">
 		<div class="row">
	        <div class="col-xs-3">
	          <%= render 'users/side_header' %>
	        </div>
			<div class="col-xs-9" style><h1>つぶやき編集</h1>
				<%= form_for(@tweet) do |f| %>
					<def class = "field">
						<div>
							<%= f.label :内容 %><br>
							<%= f.text_area :tweet, autofocus: true, :size=>"100x5" %>
						</div><br>
						<div>
							<%= f.label :聞き手 %><br>
					    	<%= f.select :listener, ["無言、聞き専", "うなづき、あいづち", "対話、会話", "アドバイス、意見が欲しい", "その他"], {include_blank: '選択ボックス'} %>
					    </div><br>
					    <div>
							<%= f.label :ジャンル %><br>
							<%= f.select :genre, ["悩み（軽）", "悩み（重い", "愚痴", "整理するために話をしたい", "その他"], {include_blank: '選択ボックス'} %>
						</div><br>
						<div>
							<%= f.submit "編集を保存する", class: "btn btn-primary" %>
						</div><br>
					</def>
				<% end %>

				<%= link_to "削除する", tweet_path, method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn btn-primary" %>
			</div>
		</div>
	</div>
</div>