<% if current_user.id == @tweet.user_id %>
	<td><%= link_to "内容を編集する",edit_tweet_path(@tweet) %></td>
<% end %>

<% @comments.each do |comment| %>
	<%= attachment_image_tag(comment.user, :profile_image, :fill, 50, 50, format: 'jpeg',fallback: "figure_standing.png") %>
	<td><%= comment.comment %></td>
	<% if current_user.id == comment.user_id %>
		<td><%= link_to "コメントを削除する", tweet_comments_path(tweet_id: comment.tweet_id, id: comment.id), method: :delete %></td>
	<% end %>
<% end %>

<%= form_for [@tweet, @comment] do |f| %>
	<%= f.submit "送信する" %>
<% end %>