<div class = "body" style>
	<div class = "container">
		<div class="row" style>
			<div class="col-xs-3">
				<%= render 'users/side_header' %>
			</div>
		<div class="col-xs-9" style>
			<table class="table">
		<% @users.each do |user| %>
		 
 		 
		   <div class="contents row" >
			<tr>
				<td style>
					<%= link_to(user) do %>
						<%= attachment_image_tag(user, :profile_image, :fill, 50, 50, format: 'jpeg',fallback: "figure_standing.png", size:'50x50') %>
						<%= user.name %>
					<% end %>
				</td>
				<td style><%= @tweets.tweet %></td>
				<td style>
					<%# if tweet.favorited_by?(current_user) %>
						<%#= link_to tweet_favorites_path(t), method: :delete do %>
							<i class="glyphicon glyphicon-heart" aria-hidden="true" style="color: red;"></i>
							<%#= tweet.favorites.count %>
						<%# end %>
					<%# else %>
						<%#= link_to tweet_favorites_path(t), method: :post do %>
							<i class="glyphicon glyphicon-heart" aria-hidden="true"></i>
							<%#= tweet.favorites.count %>
						<%# end %>
					<%# end %>
				</td>
				<td><%#= "#{tweet.comments.count} コメント" %></td>
			</tr>
			</div>
		
		<% end %>
			</table>
		</div>
	</div>
</div>

