<div class="container-fluid">
	<div class="comment_area">
    	<div ng-repeat="data in hoge.chatdata">
      		<div class="row">
				<div class="col-xs-3">
					<%= render "users/side_header" %>
				</div>
				<div class="col-xs-9">
					<table>
						<%= link_to "フォロワー 一覧", user_followers_path(current_user), class: "btn btn-primary" %>
						<table>
							<% @tweets.each do |tweet| %>
							    <div class = "tweet-index">
							    	<div class = "comment-other-than">
										<div  class = "float-left">
										<%= link_to(tweet) do %>
											<%= attachment_image_tag(tweet.user, :profile_image, :fill, 50, 50, format: 'jpeg',fallback: "figure_standing.png", size:'50x50') %>
											<%= tweet.user.name %>
										<% end %>
										</div>
										<div class = "favorite-float">
											<% if tweet.favorited_by?(current_user) %>
												<%= link_to tweet_favorites_path(tweet), method: :delete do %>
													<i class="glyphicon glyphicon-heart" aria-hidden="true" style="color: red;"></i>
													<%= tweet.favorites.count %>&ensp;
												<% end %>
											<% else %>
												<%= link_to tweet_favorites_path(tweet), method: :post do %>
													<i class="glyphicon glyphicon-heart" aria-hidden="true"></i>
													<%= tweet.favorites.count %>&ensp;
												<% end %>
											<% end %>
											<div class = "comment-float">&ensp;<%= "#{tweet.comments.count} コメント" %>&ensp;</div>
										</div>
									</div>
									<div class = "index-comment"><br><%= link_to tweet.tweet, tweet_path(tweet) %><br></div>
								</div>
							<% end %>
						</table>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>