<div class="container-fluid">
	<div class="comment_area">
  		<div class="row">
			<div class="col-xs-3">
				<%= render "users/side_header" %>
			</div>
			<div class="col-xs-9">
				<table>
					<% @tweets.each do |tweet| %>
						<div class = "tweet-index">
							<div class = "comment-other-than">
								<div  class = "float-left">
									<%= link_to(tweet.user) do %>
										<%= attachment_image_tag(tweet.user, :profile_image, :fill, 50, 50, format: 'jpeg',fallback: "figure_standing.png", size:'50x50') %>
										<%= tweet.user.name %>
									<% end %>
								</div>
								<div class = "favorite-float">
									<%= render partial: "tweets/favorites", locals: {tweet: tweet} %>
								</div>
								<div class = "comment-float">&ensp;<%= "#{tweet.comments.count} ã‚³ãƒ¡ãƒ³ãƒˆ" %>&ensp;
								</div>
							</div>
							<div class = "index-comment"><br><%= link_to tweet.tweet, tweet_path(tweet) %>
							</div><br>
						</div>
					<% end %>
				</table>
			</div>
		</div>
	</div>
</div>

